{
  "compilerOptions": {
      "module": "commonjs",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "skipLibCheck": true
  },
  "include": [
      "src/**/*",
      "testing/**/*",
      "index.ts",
      "jest.setup.ts",
      "jest.config.ts"
    ]
}